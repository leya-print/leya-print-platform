{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "startup services",
            "dependsOn": [
                "tpl-service",
                "pdf-service",
                "designer",
                "print",
                "templates"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "build templates",
            "isBackground": true,
            "dependsOn": [
                "templates build"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "build all",
            "type": "shell",
            "command": "bash",
            "args": [
                "build-all.sh"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "tpl-service",
            "type": "shell",
            "isBackground": true,
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "options": {
                "cwd": "${workspaceFolder}/server/tpl-service"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "pdf-service",
            "type": "shell",
            "isBackground": true,
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "options": {
                "cwd": "${workspaceFolder}/server/pdf-service"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "designer",
            "isBackground": true,
            "type": "shell",
            "command": "npm",
            "args": [
                "start"
            ],
            "options": {
                "cwd": "${workspaceFolder}/web/designer"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "print",
            "isBackground": true,
            "type": "shell",
            "command": "npm",
            "args": [
                "start"
            ],
            "options": {
                "cwd": "${workspaceFolder}/web/print"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "templates install",
            "isBackground": true,
            "type": "shell",
            "command": "npm",
            "args": [
                "install"
            ],
            "options": {
                "cwd": "${workspaceFolder}/web/templates"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "templates build",
            "isBackground": true,
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build"
            ],
            "dependsOn": "templates install",
            "options": {
                "cwd": "${workspaceFolder}/web/templates"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "templates",
            "isBackground": true,
            "type": "shell",
            "command": "npm",
            "args": [
                "start"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}/web/templates"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
  }
{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "declaration": true,    
    "declarationDir": "dist",
    "moduleResolution": "Node",
    "strict": false,
    "lib": [
      "dom",
      "es2017"
    ],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
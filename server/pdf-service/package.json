{
    "name": "@leya-print/pdf-service",
    "version": "1.0.0",
    "description": "Service that generates PDFs using playwright with chromium",
    "main": "index.js",
    "scripts": {
        "dev": "ts-node -r tsconfig-paths/register src/server.ts",
        "dev:watch": "nodemon --exec npm run dev",
        "start": "node dist/launch.js",
        "build": "tsc -p ./tsconfig.build.json",
        "test": "mocha -r ts-node/register src/**/*.spec.{js,ts} --watch-files src/**/*.ts",
        "test:watch": "npm run test -- --watch-files src/**/*.ts --watch",
        "install-browser": "PLAYWRIGHT_BROWSERS_PATH=./browsers playwright install chrome",
        "remove-integrity": "node remove-integrity.js 'node_modules/@leya-print/server-common' '@leya-print/server-common'"
    },
    "watch": {
        "dev": {
            "patterns": [
                "src/**/*"
            ],
            "extensions": "ts,js"
        },
        "test": {
            "patterns": [
                "src/**/*"
            ],
            "extensions": "ts,js"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/leya-print/leya-print-platform.git"
    },
    "keywords": [
        "leya",
        "print",
        "rest",
        "pdf"
    ],
    "author": "emanuel.hein@code-better.it",
    "license": "UNLICENSED",
    "dependencies": {
        "@leya-print/server-common": "file:../common/leya-print-server-common-1.0.0.tgz",
        "body-parser": "^1.20.3",
        "cors": "^2.8.5",
        "cross-fetch": "^4.0.0",
        "express": "^4.21.1",
        "multer": "^1.4.5-lts.1",
        "node-signpdf": "^1.5.1",
        "nodemon": "^3.0.1",
        "playwright": "1.33",
        "shelljs": "^0.8.5",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/chai": "^4.3.1",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/mocha": "^9.1.1",
        "@types/multer": "^1.4.7",
        "@types/shelljs": "^0.8.11",
        "@types/uuid": "^8.3.4",
        "chai": "^4.3.6",
        "mocha": "^10.0.0",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^4.7.4"
    }
}
